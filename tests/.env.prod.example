# FormBridge Production Test Configuration
# Copy to tests/.env.prod and fill in values

# Base URL for production API Gateway
BASE_URL=https://12mse3zde5.execute-api.ap-south-1.amazonaws.com/Prod

# Production API Key (REQUIRED for prod)
API_KEY=REPLACE_ME

# Primary form ID to test
FORM_ID=my-portfolio

# Comma-separated form IDs for routing tests
FORM_IDS_ROUTED=contact-us,careers,support

# HMAC Signature Support
HMAC_ENABLED=true
HMAC_SECRET=REPLACE_IF_ENABLED

# DynamoDB Configuration
DDB_TABLE=contact-form-submissions-v2
REGION=ap-south-1

# MailHog Configuration (not used in prod)
MAILHOG_URL=

# Webhook Configuration (optional)
WEBHOOK_QUEUE_URL=OPTIONAL_SQS_QUEUE_URL
WEBHOOK_DLQ_URL=OPTIONAL_SQS_DLQ_URL
GENERIC_WEBHOOK_URL=OPTIONAL_WEBHOOK_URL

# k6 Load Test Configuration
K6_VUS=2
K6_DURATION=60s

# Email Test Configuration
TEST_EMAIL=test@example.com

# Logging Configuration
LOG_LEVEL=INFO
VERBOSE=false
