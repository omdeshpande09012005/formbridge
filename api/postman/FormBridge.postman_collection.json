{
  "info": {
    "_postman_id": "formbridge-api-collection-v2",
    "name": "FormBridge API",
    "description": "FormBridge serverless form submission API collection with HMAC signing and CSV export",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Pre-request script for HMAC signing (optional)",
          "// Enabled when HMAC_ENABLED environment variable is set to true",
          "",
          "const hmacEnabled = pm.environment.get('hmac_enabled') === 'true';",
          "if (!hmacEnabled) return;",
          "",
          "const hmacSecret = pm.environment.get('hmac_secret');",
          "if (!hmacSecret) {",
          "    console.warn('HMAC enabled but hmac_secret not set');",
          "    return;",
          "}",
          "",
          "// Get current timestamp (Unix seconds)",
          "const timestamp = Math.floor(Date.now() / 1000).toString();",
          "",
          "// Get request body",
          "let body = '';",
          "if (pm.request.body && pm.request.body.raw) {",
          "    body = pm.request.body.raw;",
          "}",
          "",
          "// Compute HMAC signature using CryptoJS (built-in to Postman)",
          "const message = timestamp + '\\n' + body;",
          "const signature = CryptoJS.HmacSHA256(message, hmacSecret).toString();",
          "",
          "// Set headers",
          "pm.request.headers.add({",
          "    key: 'X-Timestamp',",
          "    value: timestamp",
          "});",
          "",
          "pm.request.headers.add({",
          "    key: 'X-Signature',",
          "    value: signature",
          "});",
          "",
          "console.log('HMAC headers set - Timestamp: ' + timestamp);"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "Forms",
      "description": "Form submission endpoints",
      "item": [
        {
          "name": "Submit",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('submission_id', jsonData.id);",
                  "    pm.test('Submission ID returned', function () {",
                  "        pm.expect(jsonData).to.have.property('id');",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Api-Key",
                "value": "{{api_key}}",
                "disabled": false
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"form_id\": \"{{form_id}}\",\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"message\": \"I would like to discuss a project opportunity.\",\n  \"page\": \"{{page}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/submit",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "submit"
              ]
            },
            "description": "Submit a new form entry with contact information"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Analytics",
      "description": "Analytics and metrics endpoints",
      "item": [
        {
          "name": "Get Analytics",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.test('Analytics response valid', function () {",
                  "        pm.expect(jsonData).to.have.property('form_id');",
                  "        pm.expect(jsonData).to.have.property('total_submissions');",
                  "        pm.expect(jsonData).to.have.property('last_7_days');",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Api-Key",
                "value": "{{api_key}}",
                "disabled": false
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"form_id\": \"{{form_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/analytics",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "analytics"
              ]
            },
            "description": "Retrieve analytics for a specific form (total submissions, 7-day breakdown, latest submission)"
          },
          "response": []
        },
        {
          "name": "Export CSV",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    pm.test('CSV export successful', function () {",
                  "        pm.expect(pm.response.headers.get('Content-Type')).to.include('text/csv');",
                  "        pm.expect(pm.response.text()).to.include('id,form_id,name,email');",
                  "    });",
                  "    ",
                  "    pm.test('CSV contains headers and data', function () {",
                  "        const csv = pm.response.text();",
                  "        const lines = csv.split('\\n');",
                  "        pm.expect(lines.length).to.be.greaterThan(1);",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "X-Api-Key",
                "value": "{{api_key}}",
                "disabled": false
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"form_id\": \"{{form_id}}\",\n  \"days\": 7\n}"
            },
            "url": {
              "raw": "{{base_url}}/export",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "export"
              ]
            },
            "description": "Export submissions as CSV file (max 10,000 rows)"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://127.0.0.1:3000",
      "type": "string"
    },
    {
      "key": "api_key",
      "value": "",
      "type": "string"
    },
    {
      "key": "form_id",
      "value": "my-portfolio",
      "type": "string"
    },
    {
      "key": "page",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "submission_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "hmac_enabled",
      "value": "false",
      "type": "string"
    },
    {
      "key": "hmac_secret",
      "value": "",
      "type": "string"
    }
  ]
}
